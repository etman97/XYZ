@model IEnumerable<XYZSTUDIOSFINALFINAL.Models.ViewModels.Pages.PageVM>

@{
    ViewBag.Title = "Pages";
}

<h2>Pages</h2>

<p>
    @Html.ActionLink("Add New Page", "AddPage")
</p>

@if (!Model.Any())
{
<h1 class="text-center">There are no pages.</h1> }
            else
            {
<table class="table sorting" id="pages">
    <tr class="home">
        <th>
            Title
        </th>
        <th>
            User Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr id="id_@item.Id">
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Username)
    </td>
    <td>
        @Html.ActionLink("Details", "PageDetails", new { id = item.Id }) |
        @Html.ActionLink("Delete", "DeletePage", new { id = item.Id }, new { @class = "delete" })
    </td>
</tr>}

</table>}
